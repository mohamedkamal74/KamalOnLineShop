@model RoleUserVM

@{
    ViewData["Title"] = "Assign";
}

<h3 class="text-info">Assign Role</h3>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Assign" >
            <div class=" p-4 border rounded">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h3 class="text-danger">@ViewBag.msg</h3>
           
           
             <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId"  class="form-control"
                asp-items="@(new SelectList(ViewBag.UserId,"Id","UserName"))">
                <option value=""> Select User Name .....</option>
               </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
              <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                <select asp-for="RoleId"  class="form-control"
                asp-items="@(new SelectList(ViewBag.RoleId,"Name","Name"))">
                <option value=""> Select Role Name ....</option>
               </select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>




            <div class="form-group">
                <input type="submit" value="Assign" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-dark">Back to List</a>

            </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
