@model RoleUserVM

@{
    ViewData["Title"] = "Create";
}


<h4 class="text-info">Add new Product</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div class=" p-4 border rounded">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h3 class="text-danger">@ViewBag.message</h3>
           
           
             <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId"  class="form-control"
                asp-items="@(new SelectList(ViewBag.userId,"Id","ProductType"))">
                <option value=""> Select Product Type</option>
               </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
              <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                <select asp-for="RoleId"  class="form-control"
                asp-items="@(new SelectList(ViewBag.roleId,"Id","TagName"))">
                <option value=""> Select Special Tag</option>
               </select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>




            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-dark">Back to List</a>

            </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
