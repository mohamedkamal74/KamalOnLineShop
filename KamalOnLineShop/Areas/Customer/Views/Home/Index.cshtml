@model List<Products>
@{
    ViewData["Title"] = "Home Page";
}
<br /> <br />
<div class="row">
    @foreach (var Product in Model)
   {
       <div class="col-md-4">
       <div class="card mb-4">
      <div class="card-header">
          <h4 class="my-0 font-weight-normal">
            <label style="font-size:23px;color:steelblue">@Product.Name</label>
          </h4>
      </div>

      <img src="~/@Product.Image" style="height:300px" class="card-img-top" alt="card-image"/>
      <div class="card-header">
          <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                  <lable style="font-size:20px;color:#a15313"><b>Price :@Product.Price</b></lable>
              </div>
              <a asp-action="Details" asp-controller="Home" asp-route-id="@Product.Id" class="btn btn-outline-info pull-right">Details</a>
          </div>
      </div>
       </div>


       </div>
   }
</div>
