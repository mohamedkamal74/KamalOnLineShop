@model List<Products>
@{
    ViewData["title"] = "Cart";
}
<h2 class="text-info"> Shopping cart</h2>
<br />
@if (Model.Any())
{
    <div class="col-md-2"></div>
    <div class="col-md-10">
<div class="row" >
    <table class="table-bordered">
        <thead>
            <tr>
                <th class="col-3">Image</th>
                <th class="col-2">Name</th>
                <th class="col-2">Price</th>
                <th class="col-2">Product Type</th>
                <th class="col-1">Color</th>
                <th></th>
            </tr>
            
        </thead>
        <tbody>
            @foreach (var item in Model)
           {
                <tr>
                    <td>  
                        <img src="~/@item.Image" style="width:150px;height:150px"/>
                     </td>
                     <td>@item.Name</td>
                     <td>@item.Price</td>
                     <td>@item.ProductTypes.ProductType</td>
                     <td>@item.ProductColor</td>
                     <td>
                         <a asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger">
                             <i class="fa-solid fa-calendar-xmark"></i>
                         </a>

                     </td>
                </tr>
            }
            </tbody>
        </table>
</div> 
</div>


    <div class="col-md-5">
        <a asp-action="Index" asp-controller="Home" class="btn btn-dark">Back to home</a>
    </div>
    <div class="col-md-5 text-right">
        <h4>Total Amount</h4>
        <h4 class="text-danger"> Grant Total:@Model.Sum(x=>x.Price)</h4>
        <a asp-action="CheckOut" asp-controller="Order" class="btn btn-info">Process to checkout </a>
    </div>

}
else
{
    <h2 class="text-danger"> No Product Added to shopping cart yet.....</h2>
}
